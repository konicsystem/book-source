<script>
     $(function(){
	 	$("#keyWord").keyup(function(){
			if ($("#keyWord").val() == "") {
				$("#suggest").hide();
				return;
			}
			
			$.ajax({
				type:"post" ,
				url:"7-7.suggestServer.jsp",
				//data : "keyWord=" + $("#keyWord").val(),
				data: $("#search").serialize(),  //serialize()?????„ì²´ ?„ì†¡
				datatype: "text",
				success : function(data){
					var result = data.split("|");
					
					var count = parseInt(result[0]);
					if(count > 0 ){
						var keyWordList = result[1].split(",");
						var str="";
						$.each(keyWordList , function(index , key){
							str+="<a href='#'>"+ key +"</a><br>"
						})
						
						$("#suggest").html(str);
						$("#suggest").show();
					}else{
						$("#suggest").hide();
					}
					
				} ,
				error :function(err){
					alert(err+"=> ?¤ë¥˜ë°œìƒ")
				}
				
			})	
		})//keyup?´ë²¤????
		
		
		//aë¥??´ë¦­?ˆì„???´ë²¤???±ë¡
		$("div").on("click" ,"a",function(){
			$("#keyWord").val($(this).text());
			$("#suggest").hide();
		})
		
		
		
	 });//jQuery ??

</script>
</head>
